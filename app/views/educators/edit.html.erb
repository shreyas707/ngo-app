<%=form_for @educator, validates: true do |f|%>
	<% if @educator.errors.any?%>
		<ul>
		<%@educator.errors.full_messages.each do |message|%>
			<li><%=message%></li>
		<%end%>
		</ul>
	<%end%>
	<%=f.select :weekly_goal, (1..20), prompt:"How many hours per week would you like to teach?"%><br/>
	<h5>Do you need a certificate for your work?</h5>
	<div class="btn-group" data-toggle="buttons">
		  <label class="btn btn-primary">
		  	<%=f.radio_button :certificate_required, false, html: {"name"=>"options", "autocomplete"=>"off"} %>Certificate required
		  	</label>
		  	<label class="btn btn-primary">
		  	<%=f.radio_button :certificate_required, true, html: {"name"=>"options", "autocomplete"=>"off"} %> Certificate not required
		  	</label>
	</div><br/>
<h4>What do you like to teach </h4>

	<%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name %><br/>
		 <%= f.select :subject_ids, options_for_select(Subject.all.sort), {:include_blank => true}, {:multiple => true, :size =>11}  %><br/>
	<%=f.submit "Let's go"%>
<%end%>
